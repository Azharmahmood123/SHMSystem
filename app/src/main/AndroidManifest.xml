<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shm.system">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shm.system.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shm.system.SignInActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.shm.system.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.shm.system.activities.FirstAidPersonHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.PatientHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.DoctorHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.AddPatientTreatmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.PatientTreatmentHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.PatientTreatmentDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.LiveDemoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.ReportsListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.ReportsAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shm.system.activities.ReportsViewActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>